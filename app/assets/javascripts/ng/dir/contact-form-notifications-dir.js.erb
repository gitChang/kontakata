angular
	.module('kontakata')
	.directive('notification', notification_build);

function notification_build() {

	function link_callback(scope, elem) {

		var icon_warn = '<i class="fa fa-hand-o-right"></i>';

		// watch for scope.error value and display if present.
		scope.$watch('error', function (err) {

			if (err) {

				elem.addClass('text-hey');

				elem.html(icon_warn + ' ' + err);

			} else {

				elem.removeClass('text-hey');

				elem.empty();

			}

		});

	}

	return {
		restrict: 'C',
		link: link_callback
	};

}

