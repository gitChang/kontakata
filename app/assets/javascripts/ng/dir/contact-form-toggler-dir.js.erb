'use strict';

angular
  .module('kontakata')
  .directive('toggler', toggle_form);

function toggle_form() {

  function link_callback(scope, elem) {
    
    elem.on('click', function () {

      // show or hide contact form.
      angular.element('.ninja').toggleClass('shown');
      
      // chevron icon is pointing down when 
      // contact form is hidden. 
      // hence, pointing up when shown.
      elem.toggleClass('fa-rotate-180');
  
    });

      // shown by default;
      elem.click();

  }

  return {
    restrict: 'C',
    link: link_callback
  };
}
