'use strict';

angular
	.module('kontakata')
	.controller('ContactAddCtrl', 

	function ($scope, $http) {

		// default img.src value in contact form.
		$scope.img_placehold = '/photos/default.jpg';

		// payload 
		$scope.model = { 
			file_name: null, 
			full_name: null, 
			social_profile_url: null, 
			mobile_number: null, 
			image_data: null
		};

		// contains error message to 
		// display in contact form > notification.
		$scope.error = null;

		// handles event ng-disabled in contact form > fieldset.
		$scope.is_saving = false;


		// reset model
		$scope.reset_contact_form = function () {

			angular.forEach(Object.keys($scope.model), function (key) {
				$scope.model[key] = null;
			});	

			angular.element('#fileInput').attr('value', '');
			angular.element('.select').attr('src', $scope.img_placehold);

			$scope.error = null;

		};

	});